<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frog.attentionattacher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:name=".app.BasicApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Translucent" />
        <activity android:name=".LoginSuccessActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ChooseWeatherActivity" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/Translucent" />
        <activity
            android:name=".AlarmActivity"
            android:theme="@style/AppTheme.transparent_activity" />

        <meta-data
            android:name="design_width"
            android:value="768" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

        <activity
            android:name=".checkStatistic"
            android:label="@string/title_activity_check_statistic"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>